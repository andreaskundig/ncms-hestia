<footer class="footer-outer">
  <div class="footer-inner responsive-wrapper">
    <div class="footer-cell-one-third">
      <a href="/{{locale}}" class="foot-logo"
        role="img" aria-label="{{i18n.header_footer[locale].home}}">
        <img src="/assets/img/hestialabs-logo+text-inverted.svg"
          onerror="this.onerror=null; this.src='/assets/img/hestialabs-logo+text-inverted.export-390x147.png'"
          height="72" width="191" alt="‹HestiaLabs› logo">
      </a>
    </div>
    <div class="footer-cell-two-thirds">
      <nav class="footer-navigation">
        <a href="/{{locale}}/media/">{{i18n.header_footer[locale].media}}</a>
        <a href="/{{locale}}/legal/">{{i18n.header_footer[locale].legal}}</a>
        <a href="/{{locale}}/about/">{{i18n.header_footer[locale].about}}</a>
        <a href="/{{locale}}/about/#contact">{{i18n.header_footer[locale].contact}}</a>
      </nav>
      <nav class="footer-navigation">
        <a href="{{i18n.links[locale].twitter_url}}"  rel="nofollow noopener">{{i18n.links[locale].twitter_label}}</a>
        <a href="{{i18n.links[locale].linkedin_url}}" rel="nofollow noopener">{{i18n.links[locale].linkedin_label}}</a>
        <a href="{{i18n.links[locale].facebook_url}}" rel="nofollow noopener">{{i18n.links[locale].facebook_label}}</a>
      </nav>
    </div>
  </div>
</footer>