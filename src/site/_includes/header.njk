<header class="header-outer">
  <div class="header-inner responsive-wrapper">
    <div class="header-cell-one-third">
      <a href="/{{locale}}" class="header-logo"
        role="img" aria-label="{{i18n.header_footer[locale].home}}">
        <img src="/assets/img/dating-privacy-logo-web.export.svg"
          onerror="this.onerror=null; this.src='/assets/img/dating-privacy-logo-web.export-390x147.png'"
          height="49" width="130" alt="‹Dating Privacy› logo">
      </a>
    </div>
    <div class="header-cell-two-thirds">
      <nav class="header-navigation">
        <a href="/{{locale}}/blog/">{{i18n.header_footer[locale].blog}}</a>
        <a href="/{{locale}}/mission/">{{i18n.header_footer[locale].mission}}</a>
        <a href="/{{locale}}/partners/">{{i18n.header_footer[locale].partners}}</a>
        {% for translation in translations %}
          {% if not loop.first %}|{% endif %}
          <a href="{{translation.page.url}}">{{translation.locale}}</a>
        {% endfor %}
      </nav>
    </div>
  </div>
</header>